extends layoutEmpleado

block contenido
  .container.mt-5
    .card.shadow-sm
      .card-header.bg-primary.text-white
        h2.mb-0 Panel del Empleado

      .card-body
        p.lead Bienvenido, #{empleado.nombre} #{empleado.apellido}

        .d-grid.gap-3.mt-4
          a.btn.btn-outline-primary.btn-lg(href=`/empleado/${empleado.id}/tareas`)
            i.fa.fa-tasks.me-2
            | Ver Tareas Asignadas

        hr.my-4

        h5.mb-3.text-muted Buscar tareas por nombre y apellido

        form(method="GET", action="/empleados/dashboard/buscar-tareas")


          .row.mb-3
            .col-md-6
              label.form-label(for="nombre") Nombre
              input.form-control(type="text", name="nombre", id="nombre", placeholder="Ej. Juan", required)
            .col-md-6
              label.form-label(for="apellido") Apellido
              input.form-control(type="text", name="apellido", id="apellido", placeholder="Ej. PÃ©rez", required)

          button.btn.btn-success.mt-3(type="submit")
            i.fa.fa-search.me-2
            | Buscar Tareas
