
extends layoutEmpleado

block contenido
  .card.shadow-sm.mb-4
    .card-header.bg-white.py-3.d-flex.justify-content-between.align-items-center
      h2.mb-0 Lista de Empleados
      .d-flex.align-items-center
        input#search.form-control.me-2(type="text" placeholder="Buscar persona...")
        a.btn.btn-success.btn-sm(href="/cuenta/nueva")
          i.fa.fa-user-plus.me-1
          | Agregar

    .card-body.p-0
      if empleados.length
        .table-responsive
          table.table.table-hover.mb-0#empleados-table
            thead.table-light
              tr
                th ID
                th Nombre
                th Apellido
                th DNI
                th Teléfono
                th Email
                th.text-center Acciones
            tbody
              each e in empleados
                tr
                  td.py-2 #{e.id}
                  td.py-2 #{e.nombre}
                  td.py-2 #{e.apellido}
                  td.py-2 #{e.dni}
                  td.py-2 #{e.telefono}
                  td.py-2 #{e.email}
                  td.text-center.py-2
                    a.btn.btn-sm.btn-primary.mx-1(href=`/cuenta/${e.id}`)
                      i.fa.fa-eye
                    a.btn.btn-sm.btn-warning.mx-1(href=`/cuenta/${e.id}/editar`)
                      i.fa.fa-edit
                    form.d-inline(method="POST" action=`/cuenta/${e.id}?_method=DELETE`)
                      button.btn.btn-sm.btn-danger.mx-1(type="submit" onclick="return confirm('¿Eliminar registro?');")
                        i.fa.fa-trash
      else
        .p-4.text-center.text-muted No hay personas registradas.

  script.
    document.getElementById('search').addEventListener('input', function() {
      const term = this.value.toLowerCase();
        document.querySelectorAll('#empleados-table tbody tr').forEach(row => {
          row.style.display = row.textContent.toLowerCase().includes(term) ? '' : 'none';
      });
    });
