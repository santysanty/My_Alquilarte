extends layoutEmpleado

block contenido
  .card.mx-auto.shadow-sm.mb-4(style="max-width: 480px;")
    .card-header.bg-white.py-3
      h3.mb-0 Editar Usuario #{usuario.id}
    .card-body
      form(method="POST" action=`/usuario/usuarios/${usuario.id}?_method=PUT` enctype="multipart/form-data")
        .mb-3
          label.form-label(for="usuario") Usuario
          input.form-control(type="text" name="usuario" id="usuario" value=usuario.usuario required)
        .mb-3
          label.form-label(for="contrasena") Contraseña
          input.form-control(type="password" name="contrasena" id="contrasena" value=usuario.contrasena required)
        .mb-3
          label.form-label(for="rol") Rol
          select.form-select(name="rol" id="rol")
            option(value="empleado", selected=usuario.rol === 'empleado') Empleado
            option(value="administrador", selected=usuario.rol === 'administrador') Administrador
            option(value="propietario", selected=usuario.rol === 'propietario') Propietario
            option(value="inquilino", selected=usuario.rol === 'inquilino') Inquilino
        .mb-3
          label.form-label(for="nombre") Nombre
          input.form-control(type="text" name="nombre" id="nombre" value=usuario.nombre required)
        .mb-3
          label.form-label(for="apellido") Apellido
          input.form-control(type="text" name="apellido" id="apellido" value=usuario.apellido required)
        .mb-3
          label.form-label(for="dni") DNI
          input.form-control(type="text" name="dni" id="dni" value=usuario.dni required)
        .mb-3
          label.form-label(for="telefono") Teléfono
          input.form-control(type="text" name="telefono" id="telefono" value=usuario.telefono required)
        .mb-3
          label.form-label(for="correoElectronico") Correo Electrónico
          input.form-control(type="email" name="correoElectronico" id="correoElectronico" value=usuario.correoElectronico required)
        .mb-3
          label.form-label(for="foto") Cambiar foto de perfil
          input.form-control(type="file" name="foto" id="foto" accept="image/*")
        .d-flex.justify-content-end
          button.btn.btn-primary(type="submit")
            i.fa.fa-save.me-1
            | Guardar
          a.btn.btn-secondary.ms-2(href="/usuario/usuarios")
            i.fa.fa-times.me-1
            | Cancelar
