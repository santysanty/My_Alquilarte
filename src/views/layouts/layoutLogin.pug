doctype html
html(lang="es")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= typeof title !== 'undefined' ? title : 'Empleado_App'

    // Bootstrap CSS
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")

    // FontAwesome (opcional para iconos)
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css")

  body(class="bg-light d-flex flex-column min-vh-100")
    // Navbar
    nav.navbar.navbar-expand-lg.navbar-dark.bg-success.py-2
      .container
        a.navbar-brand(href="/login") Login

    // Contenido principal
    main.container.flex-fill.mt-4.mb-5
      block content

    // Footer sticky
    footer.text-center.py-3.bg-white.mt-auto.shadow-sm
      - var currentYear = new Date().getFullYear();
      small.text-muted © #{currentYear} ALQUILARTE

    // Bootstrap JS Bundle
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")

    // Bloque para scripts específicos de la vista
    block scripts
