extends layoutLogin

block contenido
  .card.mx-auto.mt-5.shadow-sm(style="max-width: 400px;")
    .card-header.text-center.bg-white
      h3.mb-0 Iniciar Sesión

    .card-body
      form(method="POST" action="/login")
        input(type="hidden" name="_csrf" value=csrfToken)

        .mb-3
          label.form-label(for="usuario") Usuario
          input.form-control(type="text", name="usuario", id="usuario", required)
        .mb-3
          label.form-label(for="contrasena") Contraseña
          input.form-control(type="password" name="contrasena" id="contrasena" required)
        button.btn.btn-primary.w-100(type="submit") Ingresar

      .mt-3.text-center
        a(href="/olvide") ¿Olvidaste tu contraseña?
