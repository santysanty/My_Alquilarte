extends layoutAdmin
block contenido
  .container.mt-5
    h1 Editar Tarea: #{tarea.titulo}
    form(action=`/tareas/${tarea.tareaID}/editar?_method=POST`, method="POST")
      .mb-3
        label(for="titulo", class="form-label") Título:
        input(type="text", id="titulo", name="titulo", class="form-control", value=tarea.titulo, required)
      .mb-3
        label(for="descripcion", class="form-label") Descripción:
        textarea(id="descripcion", name="descripcion", class="form-control", rows="3")= tarea.descripcion
      .mb-3
        label(for="area", class="form-label") Área:
        select(id="area", name="area", class="form-select", required)
          option(value="") Seleccione un área
          each areaOpt in areas
            option(value=areaOpt, selected=tarea.area === areaOpt ? 'selected' : false)= areaOpt
      .mb-3
        label(for="estado", class="form-label") Estado:
        select(id="estado", name="estado", class="form-select", required)
          each estadoOpt in estados
            option(value=estadoOpt, selected=tarea.estado === estadoOpt ? 'selected' : false)= estadoOpt
      .mb-3
        label(for="prioridad", class="form-label") Prioridad:
        select(id="prioridad", name="prioridad", class="form-select", required)
          each prioridadOpt in prioridades
            option(value=prioridadOpt, selected=tarea.prioridad === prioridadOpt ? 'selected' : false)= prioridadOpt
      .mb-3
        label(for="fecha", class="form-label") Fecha Límite:
        input(type="date", id="fecha", name="fecha", class="form-control", value=tarea.fecha)
      .mb-3
        label(for="empleadoId", class="form-label") Empleado Asignado (ID):
        input(type="number", id="empleadoId", name="empleadoId", class="form-control", value=tarea.empleadoId)
      .mb-3
        label(for="informe", class="form-label") Informe:
        textarea(id="informe", name="informe", class="form-control", rows="3")= tarea.informe
      .mb-3.form-check
        input(type="checkbox", id="finalizada", name="finalizada", class="form-check-input", checked=tarea.finalizada ? 'checked' : false)
        label(for="finalizada", class="form-check-label") Finalizada
      button(type="submit", class="btn btn-primary") Actualizar Tarea
      a(href="/tareas", class="btn btn-secondary ms-2") Cancelar