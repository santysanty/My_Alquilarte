extends layoutEmpleado
block contenido
  .card.mx-auto.shadow-sm.mb-4(style="max-width: 480px;")
    .card-header.bg-white.py-3
      h3.mb-0 Crear Nuevo Empleado
    .card-body
      // La acción del formulario debe apuntar a la ruta POST /empleados/nuevo
      form(method="POST" action="/empleados/nuevo")
        .mb-3
          label.form-label(for="nombre") Nombre
          input.form-control(type="text" name="nombre" id="nombre" required)
        .mb-3
          label.form-label(for="apellido") Apellido
          input.form-control(type="text" name="apellido" id="apellido" required)
        .mb-3
          label.form-label(for="dni") DNI
          input.form-control(type="text" name="dni" id="dni" required)
        .mb-3
          label.form-label(for="telefono") Teléfono
          input.form-control(type="text" name="telefono" id="telefono" required)
        .mb-3
          label.form-label(for="correoElectronico") Correo Electrónico
          // Nombre del campo en el formulario debe coincidir con la propiedad de la clase
          input.form-control(type="email" name="correoElectronico" id="correoElectronico" required)
        .mb-3
          label.form-label(for="usuario") Usuario
          input.form-control(type="text" name="usuario" id="usuario" required)
        .mb-3
          label.form-label(for="contrasena") Contraseña
          input.form-control(type="password" name="contrasena" id="contrasena" required)
        .mb-3
          label.form-label(for="rol") Rol
          select.form-select(name="rol" id="rol")
            // Los valores deben ser coherentes con los roles que planeas usar en tu lógica
            option(value="Inquilino") Inquilino
            option(value="Propietario") Propietario
            option(value="empleado") empleado
            option(value="administrador") Administrador
        .mb-3
          label.form-label(for="subRol") Sub Rol
          select.form-select(name="subrol" id="subrol")
            // Los valores deben ser coherentes con los roles que planeas usar en tu lógica
            option(value="administrativo") Administrativo
            option(value="contador") Contador
            option(value="empleado") empleado
            option(value="administrador") Administrador del Sistema
            option(value="supervisor") Supervisor
            option(value="agente_inmobiliario") Agente Inmobiliario
            option(value="mantenimiento") Mantenimiento
            option(value="ventas") Ventas
        .mb-3
          label.form-label(for="foto") Foto
          input.form-control(type="file" name="foto" id="foto" accept="image/*")
        .d-flex.justify-content-end
          button.btn.btn-success(type="submit")
            i.fa.fa-check.me-1
            | Crear Empleado
          // La URL de "Cancelar" debe apuntar a la lista de empleados
          a.btn.btn-secondary.ms-2(href="/empleados")
            i.fa.fa-times.me-1
            | Cancelar