doctype html
html(lang="es")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title #{title || 'Empleado_App'}
    // Bootstrap CSS (carga única)
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css")
    // FontAwesome (opcional para iconos)
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css")
  body(class="bg-light d-flex flex-column min-vh-100")
    nav.navbar.navbar-expand-lg.navbar-dark.bg-success.py-2
      .container
        a.navbar-brand(href="/admin") Login
    main.container.flex-fill.mt-4.mb-5
      block contenido

    // Footer sticky
    footer.text-center.py-3.bg-white.mt-auto.shadow-sm
      small.text-muted © #{new Date().getFullYear()} ALQUILARTE

    // Bootstrap JS Bundle (carga única)
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js")